{% extends 'base.html.twig' %}

{% block body %}
    <div class="container h-100">
        <div class="d-flex align-items-center justify-content-center h-100">
            <form class="col-lg-5" method="POST" action="{{ path('login') }}">
                <div class="row d-md-flex align-items-baseline justify-content-around">
                    <img src="{{ asset('img/logo.png') }}" width="250">
                </div>
                <div class="form-group">
                    <label for="username">Kasutajanimi:</label>
                    <input type="text" name="_username" class="form-control" id="username">
                </div>
                <div class="form-group">
                    <label for="password">Parool:</label>
                    <input type="password" name="_password" class="form-control" id="password">
                </div>
                {% if error %}
                    <div class="alert alert-danger">
                        {% if error %}
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        {% endif %}
                    </div>
                {% endif %}
                <button type="submit" class="btn btn-primary btn-lg ">Logi sisse</button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            </form>
        </div>
    </div>

{% endblock %}

