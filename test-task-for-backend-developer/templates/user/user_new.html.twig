{% extends 'menu/menu_links.html.twig' %}

{% block mainContent %}
    <div class="info-block shadow">
        <h5 class="info-box-title"> {% block boxTitle %} Uus töötaja {% endblock %} </h5>

        {{ form_start(form, { 'attr': {'class': 'needs-validation row d-flex justify-content-around', 'novalidate': 'novalidate'} }) }}
                <div class="col-md-5">
                    {{ form_row(form.name) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.personalCode) }}
                    {{ form_label(form.phone) }}
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">+372</span>
                        </div>
                        {{ form_widget(form.phone) }}
                    </div>
                    {{ form_row(form.email) }} 
                </div>
                <div class="col-md-5">
                    {{ form_row(form.code) }}
                    {{ form_row(form.birthday) }}
                    {{ form_row(form.position) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.plainPassword.first) }}
                    {{ form_row(form.plainPassword.second) }}
                    <button type="submit" class="btn btn-primary btn-lg float-right">
                        {% block buttonName %} Salvesta {% endblock %}
                    </button>    
                </div>
        {{ form_end(form) }}
    
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-3">
                {{ message }}
            </div>
        {% endfor %}     
    </div>      
{% endblock %}